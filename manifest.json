{
  "manifest_version": 3,
  "name": "Video Playback Speed Controller",
  "version": "0.2.0",
  "description": "Control playback speed on YouTube and NRK TV",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "*://tv.nrk.no/*",
    "*://*.nrk.no/*",
    "*://www.youtube.com/*",
    "*://youtube.com/*"
  ],
  "action": {
    "default_title": "Speedster",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://tv.nrk.no/*", "*://*.nrk.no/*"],
      "js": ["dist/speed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["dist/speed-youtube.js"],
      "run_at": "document_idle"
    }
  ]
}
